{
  "name": "contracts",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf cache artifacts typechain typechain-types build dist .openzeppelin",
    "compile": "hardhat compile",
    "typechain": "hardhat typechain",
    "build": "npm run compile && npm run typechain",
    "test": "npx hardhat test --network hardhat",
    "test:unit": "npx hardhat test test/*.test.ts --network hardhat",
    "test:integration": "npx hardhat test test/Integration.test.ts --network hardhat",
    "coverage": "hardhat coverage",
    "gas": "REPORT_GAS=true npx hardhat test",
    "lint": "npx solhint 'contracts/**/*.sol' || true",
    "format": "prettier --write '**/*.{ts,js,sol,json,md}'",
    "node": "hardhat node",
    "deploy": "hardhat deploy --network localhost --tags all",
    "deploy:local": "hardhat deploy --network localhost --tags all",
    "deploy:sepolia": "hardhat deploy --network sepolia --tags all",
    "deploy:mainnet": "hardhat deploy --network mainnet --tags all",
    "verify:sepolia": "hardhat --network sepolia etherscan-verify",
    "verify:mainnet": "hardhat --network mainnet etherscan-verify",
    "status": "npx hardhat run scripts/status.ts",
    "manage-presale": "npx hardhat run scripts/manage-presale.ts",
    "manage-vesting": "npx hardhat run scripts/manage-vesting.ts",
    "buy-tokens": "npx hardhat run scripts/buy-tokens.ts",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomiclabs/hardhat-solhint": "^4.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.17",
    "chai": "^4.5.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "hardhat": "^2.26.3",
    "hardhat-deploy": "^1.0.4",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^10.8.2",
    "prettier": "^2.8.8",
    "solhint": "^6.0.1",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "typechain": {
    "outDir": "typechain",
    "target": "ethers-v6"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
